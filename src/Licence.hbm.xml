<?xml version="1.0"?> 
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" > 
<hibernate-mapping> 
<class name="Lecturer" table="Lecturer"> 
    <id name="id" type="int"> <generator class="increment"/> </id> 
    <property name="nom" column="nom" />     
    <property name="categorie" column="categorie" />
    <property name="type" column="type" /> 
    <property name="compatibilite" column="compatibilite" /> 
    <property name="droits" column="droits" /> 
    <property name="description" column="description" /> 
</class> 
</hibernate-mapping>